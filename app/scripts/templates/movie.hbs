<div class="jumbotron">
    <h1>{{Title}}</h1>
    Genre : <p {{#if contenteditable }}contenteditable="true"{{/if}} id="Genre">{{Genre}}</p>
    Director: <p {{#if contenteditable }}contenteditable="true"{{/if}} id="Director">{{Director}}</p>
    Staring: <p {{#if contenteditable }}contenteditable="true"{{/if}} id="Actors"> {{Actors}}</p>


    <img src="{{Poster}}">
    <p>
        {{#if contenteditable }}
        <a class="btn btn-info btn-lg save" role="button">Save</a>
        {{else}}
        <a class="btn btn-default btn-lg edit" role="button">Edit</a>
        {{/if}}
        <a class="btn btn-danger btn-lg delete" role="button">Delete</a>
    </p>
</div>


